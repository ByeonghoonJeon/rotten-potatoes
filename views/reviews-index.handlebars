<!-- views/reviews-index.handlebars -->

<a href="/reviews/new">New Review</a>

<h1>Reviews</h1>

<div class="row">
  {{#each reviews}}
    <div class="col-md-3">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h2 class="card-title"><a href="/reviews/{{this._id}}">{{this.title}}</a></h2>
          <h5 class="card-subtitle">{{this.movieTitle}}</h5>
          <h5 class="card-subtitle"> rating: {{this.rating}}</h5>
          <small class="card-text">{{this.description}}</small><br>
          <a href="/reviews/{{this._id}}"class="card-link">Read more</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
